    <%= image_tag '/143453.jpg', size: '50x50' %>
    <p class="app-title">アボカドサークル</p>
  </div>

  <div class="side-tab">
    <ul class="menu-lists">

      <% if user_signed_in? %>
      <li class="menu-list"><%= image_tag 'mypage.png', size: '20x20' %>
