<%= form_with model: @post, local: true do |f| %>
<%= render 'shared/error', model: f.object %>
  <div class="top-contents">

      <div class="date-content">
        <p class="date-title">記録日</p>
        <div class="date-form"> 
          <% f.label :date %>
          <%= f.date_field(:date, class:"form-box") %>
        </div>
      </div>

      <div class="condition-content">
        <p class="condition-title">調子</p>
        <div class="condition-form"> 
          <%= f.collection_select(:condition_id, Condition.all, :id, :name, {}, {class:"form-box"}) %>
        </div>
      </div>
    </div>

    <div class="text-contents">
      <p class="text-title"></p>
      <div class="text-form"> 
        <% f.label :text %>
        <%= f.text_area(:text, size:'45x10', class:"form-box", placeholder:"メモなど自由に書いて使ってね！") %>
      </div>
    </div>

    <div class="image-content">
      <div id="previews"></div>
      <div class="image-form"> 
        <% f.label :image %>
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="post-btn">
      <%= f.submit "投稿する", class:"post-submit" %>
    </div>
  </div> 
<% end %>