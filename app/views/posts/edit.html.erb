<div class="wrapper">
  <div class="post-contents", id="new_post">
      <div class="exit-btn"><%= link_to image_tag('exit.png', size:'45x45') , root_path %></div>
    <div class="post-header">
      <h1>編集</h1>
    </div>

    <div class="post-body">
    <%= render partial: 'form', locals:{post: @post} %>
    </div> 
  </div>
  <div class="delete-btn">
  <%= button_to "削除する", post_path(@post), method: :delete, class:"delete-submit" %>
  </div>
</div>