<div class="wrapper">
  <div class="side">
      <%= render "/posts/head" %>
  </div>
  
  <div class="join-wrapper">

    <div class="registration-wrapper">
      <h2 class="edit-header">プロフィール編集</h2>
      
      <div class="registration-form">
        <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error', model: f.object %>
          <div class="form-content">
            <p class="field-title">ユーザーネーム</p>
            <div class="field"> 
            <%= f.text_field :nickname, placeholder:"例)アボ太朗 ※10文字まで" %>
            </div>
          </div>

          <div class="form-content">
            <p class="field-title">都道府県</p>
            <div class="field"> 
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box"}) %>
            </div>
          </div>

          <div class="form-content">
            <p class="field-title">育てる目的</p>
            <div class="field"> 
            <%= f.collection_select(:purpose_id, Purpose.all, :id, :name, {}, {class:"select-box"}) %>
            </div>
          </div>

          <div class="form-content">
            <p class="field-title">メールアドレス</p>
            <div class="field"> 
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          
          <div class="form-content">
            <p class="field-title">自己紹介（任意）</p>
            <div class="field">
            <%= f.text_area :introduce, placeholder:"自由に書いてね！" %>
            </div>
          </div>

            <div class="actions">
              <%= f.submit "編集する" %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="login">
      <%= link_to "マイページにもどる", user_path(@user), class: "btn" %>
    </div>
  </div>
</div>